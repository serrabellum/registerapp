<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_transaction_complete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anne.transactioncomplete.TransactionComplete">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for your order!"
        android:id="@+id/ThankYou"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textAlignment="center" />

    <TextView
        android:text="Your order number is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/OrderNumPrompt"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@+id/ThankYou"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <Button
        android:text="Start Over!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StartOver"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/OrderNumPrompt"
        android:layout_toEndOf="@+id/OrderNumPrompt"
        android:id="@+id/orderNumber" />
        //Implement code to print out random number generated by code below.

    <xsl:stylesheet  version="1.0"
        xmlns:rand="http://exslt.org/random"
        xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

        <xsl:template match="/">
            <xsl:value-of select="rand:random-sequence()" />
        </xsl:template>

    </xsl:stylesheet>

</RelativeLayout>
